<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="nlog_rafeek.txt">

	<!-- NLog Variables -->
	<variable name="logName" value="rafeek" />
	<variable name="logDir" value="${currentDir}/logs/${logName}" />
	<variable name="projectName" value="Rafeek" />


	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>


	<targets>

		<target xsi:type="File" name="allfile"
				fileName="${logDir}\${logName}-${shortdate}.log"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="5"
				layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

		<!-- Exception Error log -->
		<target name="errorLog" xsi:type="File"
				fileName="${logDir}\${logName}-error-${shortdate}.log"
				archiveFileName="${logDir}\archives\${logName}-error.log.{#}"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="10"
				layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

		<!-- Informantion Log -->
		<target name="infoLog" xsi:type="File"
				fileName="${logDir}\${logName}-info-${shortdate}.log"
				archiveFileName="${logDir}\archives\${logName}-info.log{#}"
				archiveEvery="Day"
				archiveNumbering="Rolling"
				maxArchiveFiles="10"
				layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target  name="lifetimeConsole"
				 xsi:type="ColoredConsole"
				 layout="${level:truncate=4:tolower=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}">
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>

		<!-- Stdout file target for capturing all application output to file -->
		<target name="stdout" xsi:type="File"
				fileName="${logDir}\stdout_${date:format=yyyyMMdd}_${processid}.log"
				layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
				autoFlush="true" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!-- Capture only Rafeek.* class Info level logging -->
		<logger name="Rafeek.*" level="Info" writeTo="infoLog" />

		<!-- Capture only Rafeek.* class Error level logging -->
		<logger name="Rafeek.*" minlevel="Error" writeTo="errorLog" />

		<!-- All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="allfile" />
		
		<!-- Write everything (Info+) to stdout file - CRITICAL FOR STDOUT LOGS -->
		<logger name="*" minlevel="Info" writeTo="stdout" />
		
		<!-- Write everything (Info+) to Console so stdout works in Docker/IIS -->
		<logger name="*" minlevel="Info" writeTo="lifetimeConsole" />
	</rules>

</nlog>